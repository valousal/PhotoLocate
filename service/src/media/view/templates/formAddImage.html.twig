{% extends "main.html.twig" %}

{% block main_content %}
    <div class="row">
       <form class="col-sm-6 col-sm-offset-3" action='{{traitementForm}}' method='post' enctype="multipart/form-data">

          <h3> Ajouter une image </h3><br>

         {#  <div class="form-group">
            <label for="ville"> Ville </label>
            <input type="text" name='ville' class="form-control" id="ville" placeholder="Ville"/>
          </div>
 #}
          <div class="form-group">
            <label for="ville"> Ville</label>
            <select name="ville">
              {% for ville in villes %}
                  <option value="{{ ville.nom }}">{{ ville.nom }}</option>
              {% endfor %}
             </select>
          </div>

          <div class="form-group">
            <label for="adresse"> Adresse</label>
            <input type="text" name='adresse' class="form-control" id="adresse" placeholder="Adresse" autocomplete='off'/>
          </div>

          <div class="form-group">
            <label for="lat"> Latitude</label>
            <input type="number" name='lat' class="form-control" id="lat" placeholder="Latitude" step="0.00001"/>
          </div>

          <div class="form-group">
            <label for="lng"> Longitude </label>
            <input type="number" name='lng' class="form-control" id="lng" placeholder="Longitude" step="0.00001"/>
          </div>
          
          <div class="form-group">
            <label for="image"> Image</label>
            <input type="file" name='image' class="form-control" id="image"/>
          </div>

          <div class="button-container">
            <input class="btn btn-default" type="submit" value="Submit" name="Submit"/>
            <input class="btn btn-default" type="reset" value="Reset" name="reset"/>
          </div>
       </form>
    </div>
{% endblock %}